@model string
@{
    int i = 0;
    string[] Files = Directory.GetFiles(Server.MapPath("~/Views/Page/"), "ArticleListPage*.cshtml");
    List<string> FilesList = new List<string>();
    foreach (string item in Files)
    {
        string t = System.IO.Path.GetFileName(item);
        if (t.Contains(".Mobile.cshtml")) { continue; }
        FilesList.Add(t);
    }
    SelectList Items = new SelectList(FilesList, Model);
    i++;
}
<div>
    @(Html.Kendo().DropDownListFor(model => model)
    .DataTextField("Text")
    .DataValueField("Value")
    .BindTo(Items)
    .Value(Model)
    )
</div>


            <p>@RP.T("DivePage.Share.SendEmail", @"דוא""ל")</p>
         </div>
    </div>
    <div class="ui action input fluid" style="display: none" id="copyLink">
        <input type="text" readonly="readonly" id="link" value="@Model" onclick="$(this).select()" />
        <button class="ui button" onclick="copyLink()">@RP.T("DivePage.Share.CopyLink", "העתק")</button>
    </div>
</div>

@section Scripts{
    <script>
        (function () {
        })(jQuery)

        function sendEmail() {
            window.open('mailto:?subject=&body=' + '@Uri.EscapeDataString(Model)');
        }

        function showWhatsAppLink() {
            var url = "https://api.whatsapp.com/send/?phone&text=" + "@Uri.EscapeDataString(Model)" + "&app_absent=0";
            window.open(url, '_blank').focus();
        }

        function showEmbedded() {
            $('#copyLink').show();
        }

        function copyLink() {
            var text = $('#link').val();
            if (navigator.clipboard && window.isSecureContext) {
                // navigator clipboard api method
                return navigator.clipboard.writeText(text);
            } else {
                $('#link').focus();
                $('#link').select();
                return new Promise((res, rej) => {
                    // here the magic happens
                    document.execCommand('copy') ? res() : rej();
                    textArea.remove();
                });
            }
        }
    </script>
}

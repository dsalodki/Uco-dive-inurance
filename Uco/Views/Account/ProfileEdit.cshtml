@model Uco.Models.ProfileEditModel
@{
    ViewBag.Title = RP.T("Views.Account.EditProfile.ViewBagTitle");
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool upd = (ViewBag.Message == "Updated") ? true : false;
}
@if (TempData["register"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["register"]</strong>
</div>
}

<div class="brdcms">
    <ul>
        <li><a href="/">@RP.T("MainPageText")</a></li>
        <li>@RP.T("Views.Account.EditProfile.H2Text")</li>
    </ul>
    <div class="clear"></div>
</div>

<div class="page_main_heading"><h2>@RP.T("Views.Account.EditProfile.H2Text")</h2></div>
<div class="votes_text1">
    <a href="@Url.Action("ChangePassword", "Account")">@RP.T("Views.Account.EditProfile.ChangePassword")</a>
</div>

@if (upd)
{
    <div class="profile_edit_success">@RP.T("Views.Account.EditProfile.InfoSuccessfullyUpdateText")</div>
}
@using (Html.BeginForm("ProfileEdit", "Account", FormMethod.Post, new { @class = "form3" }))
{
    <div class="new_pge3_row1">
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="editor-label">@Html.LabelFor(x => x.Email)</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { @class = "single-line" })
            </div>
            <div class="clear"></div>
            <span class="field-validation-error" data-valmsg-for="name">
                @Html.ValidationMessageFor(m => m.Email)
            </span>
        </div>
        <div class="row">
            <div class="editor-label">@Html.LabelFor(x => x.FirstName)</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "single-line" })
            </div>
            <div class="clear"></div>
            <span class="field-validation-error" data-valmsg-for="name">
                @Html.ValidationMessageFor(m => m.FirstName)
            </span>
        </div>
        <div class="row">
            <div class="editor-label">@Html.LabelFor(x => x.LastName)</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.LastName, new { @class = "single-line" })
            </div>
            <div class="clear"></div>
            <span class="field-validation-error" data-valmsg-for="name">
                @Html.ValidationMessageFor(m => m.LastName)
            </span>
        </div>
        <div class="row">
            <div class="editor-label">@Html.LabelFor(x => x.City)</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.City, new { @class = "single-line" })
            </div>
            <div class="clear"></div>
            <span class="field-validation-error" data-valmsg-for="name">
                @Html.ValidationMessageFor(m => m.City)
            </span>
        </div>
    </div>

    <div class="new_pge3_row1">

        <div class="row">
            <div class="editor-label">@Html.LabelFor(x => x.Phone)</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Phone, new { @class = "single-line" })
            </div>
            <div class="clear"></div>
            <span class="field-validation-error" data-valmsg-for="name">
                @Html.ValidationMessageFor(m => m.Phone)
            </span>
        </div>

    </div>

    <div class="new_pge3_row1 no_border">
        <div class="check_part2" style="padding-top: 0px">
            <div class="right">
                @Html.CheckBoxFor(x => x.SendNewsletters)
            </div>
            <div class="left">@Html.LabelFor(x => x.SendNewsletters)</div>
            <div class="clear"></div>
        </div>
        <div class="send_btn">
            <input type="image" src="/Content/DesignFiles/Idive/form3_btn.png" width="81" height="37" alt="Send">
        </div>
    </div>
}



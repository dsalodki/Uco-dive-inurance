@model Uco.Models.LogOnModel
@{
    ViewBag.Title = RP.T("Views.Account.LogOn.ViewBagTitle");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="brdcms">
    <ul>
        <li><a href="/">@RP.T("MainPageText")</a></li>
        <li>@RP.T("Views.Account.LogOn.H2Text")</li>
    </ul>
    <div class="clear"></div>
</div>

<div class="page_main_heading"><h2>@RP.T("Views.Account.LogOn.H2Text")</h2></div>
<div class="votes_text1"><strong>@RP.T("Views.Account.LogOn.LoginText")</strong></div>
<div class="new_pge4_row">
    <div class="new_pge4_right">
        <div class="heading1">@RP.T("Views.Account.LogOn.UserExistText")</div>
        <div class="text1_n">@RP.T("Views.Account.LogOn.EnterEmailAndPasswordText")<br><a href="@Url.Action("SendPassword")"><span>@RP.T("Views.Account.LogOn.ForgetPasswordText")</span></a></div>
        @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form2" }))
        {
            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "single-line" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="clear"></div>
            </div>
            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password, new { @class = "single-line" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="clear"></div>
            </div>
            <div class="check_part">
                <div class="right">
                    @Html.CheckBoxFor(m => m.RememberMe)
                </div>
                <div class="left">@Html.LabelFor(m => m.RememberMe)</div>
                <div class="clear"></div>
            </div>
                @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)
                @Html.Partial("_InvisibleCaptcha", new Uco.Models.InvisibleCaptcha())
            <div class="form2_btn">
                <input type="image" src="/Content/DesignFiles/Idive/form2_btn.png" width="90" height="31" alt="Submit">
            </div>
        }
    </div>
    <div class="new_pge4_left">
        <div class="heading1">@RP.T("Views.Account.LogOn.RegisterText")</div>
        <div class="anr1_n_1"><a href="@Url.Action("Register", "Account")">@RP.T("Views.Account.LogOn.RegisterBtnText")</a></div>
    </div>
    <div class="clear"></div>
</div>

